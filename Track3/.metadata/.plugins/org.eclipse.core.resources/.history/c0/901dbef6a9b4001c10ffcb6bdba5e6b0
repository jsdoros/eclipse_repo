package org.ssglobal.training.codes;

public class ContextGrammar {
	
	public void cfgparse(String input) {
		
		String newContext = "";
		int letterA = input.indexOf("a");
		int letterB = input.indexOf("bb");
		int letterB = input.indexOf("cc");
		
		
		System.out.println("String test data: " + input);
		
		for(int i = 0; i < input.length(); i++) {
			if (letterA >= 0) {
				newContext = input.substring(0, letterA);
				newContext += "aa";
				newContext += input.substring(letterA + 1, input.length());
				
			}	
		}
		System.out.println("New Context is: " + newContext);
		
		System.out.println("String test data: " + input);
		
		for(int i = 0; i < input.length(); i++) {
			if (letterB >= 0) {
				newContext = input.substring(0, letterB);
				newContext += "b";
				newContext += input.substring(letterB + 1, input.length());
				
			}	
		}
		System.out.println("New Context is: " + newContext);
		
		System.out.println("String test data: " + input);
		
		for(int i = 0; i < input.length(); i++) {
			if (letterC >= 0) {
				newContext = input.substring(0, letterC);
				newContext += "cc";
				newContext += input.substring(letterB + 1, input.length());
				
			}	
		}
		System.out.println("New Context is: " + newContext);
		
	}
}
