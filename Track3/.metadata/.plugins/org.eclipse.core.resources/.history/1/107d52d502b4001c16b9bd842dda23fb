
public class BlockWordString {

		public String blockword(String input) {
			final char BLANK = ' ';
			final int LEN = input.length();
			
			// array??
			// string??
			// string buffer??
			// stringbuilder
			
			// for-loop
			// for-each??
			
			StringBuilder temp = new StringBuilder();
			for(int i = 0; i < LEN; i++) {
				if(i % 5 == 0) {
					temp.append(BLANK);
				}
				temp.append(input.charAt(i));
				
			}
			
			return temp.toString();
		}
}
