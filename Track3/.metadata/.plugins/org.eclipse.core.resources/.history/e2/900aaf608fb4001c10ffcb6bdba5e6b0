package org.ssglobal.training.codes;

import java.util.Scanner;

public class Mileage {

	public static void main(String[] args) {
	}
	
	// Initialize
	public String name = "";
			public double pricePerGal = 0.0;
			public double totalPrice = 0.0;
			public int initialOdo = 0;
			public int finalOdo = 0;
	
	public static void inputDetails(){
		
		
		// Input
		
		Scanner s = new Scanner(System.in);
		System.out.println("Enter your name.");
		name = s.nextLine();
		System.out.println("Enter price per gallon");
		pricePerGal = s.nextDouble();
		System.out.println("Enter total price for fill up.");
		totalPrice = s.nextDouble();
		System.out.println("Enter initial odometer value");
		initialOdo = s.nextInt();
		System.out.println("Enter final odometer value");
		finalOdo = s.nextInt();
	
	}

	
	public void computeMileage(){
		
		double gallonsUsed = totalPrice / pricePerGal;
	}

}
