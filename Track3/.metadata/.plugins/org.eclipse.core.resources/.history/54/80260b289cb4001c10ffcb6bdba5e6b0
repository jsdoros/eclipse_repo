package org.ssglobal.training.codes;

public class Depreciation {
	
	public void depreciate() {
		
		// Initial values
		float machineCost = 28000;
		final float rate = 4000;
		float eoyVal = machineCost - rate;
		float accumDepreciation = 0 + rate;
		
		// Header
		System.out.println("Year " + "Depreciation  " + "End-of-year value " + "Accumulated Depreciation");
		System.out.println("==== " + "============  " + "================= " + "========================");
		
		// Body
		for (int year = 1; year < 7; year++) {
			System.out.println(year + "    " + rate + "        " + eoyVal  + "            " + accumDepreciation);
			eoyVal -= rate;
			accumDepreciation += rate;
		}
	}

}
